<%-include("header")-%>
<div class="box" id="heading">
  <h1>
    <%=listTitle%>
  </h1>
</div>
<div class="box">
  <% newItems.forEach((item)=>{ %>
  <form action="/delete" method="post">
    <div class="item">
      <input type="checkbox" name="check" value="<%=item._id%>" onChange="this.form.submit()"/>
      <p>
        <%=item.name%>
      </p>
    </div>
    <input type="hidden" name="listName" value="<%=listTitle%>"></input>
  </form>
  <% });%>
  <form action="/" class="item" method="post">
    <input autocomplete="off" name="newItem" placeholder="Enter New List Item Here" type="text">
      <button name="submit" type="submit" value="<%=listTitle%>">
        +
      </button>
    </input>
  </form>
</div>
<%-include("footer")-%>
